<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/primaryText</item>
        <item name="colorOnBackground">@color/primaryText</item>
    </style>

    <!-- Button Styles -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="AppButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Card Styles -->
    <style name="AppCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>

    <!-- Text Styles -->
    <style name="AppText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="AppText.Title" parent="AppText">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="AppText.Subtitle" parent="AppText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="AppText.Body" parent="AppText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppText.Caption" parent="AppText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.RoundedCorner50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.RoundedCorner20" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.RoundedCorner16" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>